{
  "name": "r2/starter-mu-plugin",
  "description": "Plugin qui contient la boite a outil pour faire fonctionner le starter theme",
  "type": "wordpress-muplugin",
  "license": "GPL-2.0-or-later",
  "version": "1.2.3",
  "authors": [
    {
      "name": "Agence R2",
      "email": "web@r2.fr"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://r2:packages@ressources.r2.fr",
      "only": [
        "r2/*"
      ]
    }
  ],
  "require": {
    "php": ">=8.0",
    "symfony/console": "^6.4.3",
    "symfony/string": "^6.4.3",
    "symfony/finder": "6.0",
    "openai-php/client": "^0.10.1",
    "symfony/http-client": "^7.1",
    "nyholm/psr7": "^1.8"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.8",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "composer/installers": true,
      "php-http/discovery": true
    }
  },
  "scripts": {
    "phpcs": [
      "./vendor/bin/phpcs -ps *.php includes/* --standard=phpcs.xml"
    ],
    "phpfix": [
      "./vendor/bin/phpcbf -ps *.php includes/* --standard=phpcs.xml"
    ]
  }
}
